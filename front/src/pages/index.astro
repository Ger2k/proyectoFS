---
import ListaPeliculas from "../components/ListaPeliculas.astro";

const scripts = `
  <script src="/js/ajax.js"></script>
  <script src="/js/pelicula.js"></script>
  <script src="/js/funciones.js"></script>
`;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista películas</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kodchasan:wght@200;300;400;500;600;700&family=MuseoModerno:wght@100;300;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&family=Raleway:wght@300;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/estilo.css">
    <link rel="icon" href="/icons/favicon3.png" type="image/png">
  </head>
  <body>
    <div class="fondo-pantalla">
      <div class="patron-lineas">
        <div class="gradiente-negro"></div>
      </div>
    </div>

    <form action="/nueva" method="POST">
      <input name="titulo" type="text" placeholder="Título">
      <input type="submit" value="Añadir película">
    </form>

    <main class="peliculas">
      <header class="encabezado">
        <h1>Mi colección de películas (Astro)</h1>
      </header>

      <ListaPeliculas>
    </main>

    <div set:html={scripts}></div>
  </body>
</html>
